@page
@model ViccAdatbazis.Pages.ViccekListajaModel

@{
    ViewData["Title"] = "ViccekListaja";
}

<h1>ViccekListaja</h1>

<p>
    <a asp-page="UjVicc">Új vicc hozzáadása</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Tartalom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Feltolto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Tetszik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].NemTetszik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vicc[0].Aktiv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vicc)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tartalom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Feltolto)
                </td>
                <td>
                    <span id="tetszikDb">@Html.DisplayFor(modelItem => item.Tetszik)</span>
                    <button onclick="lajkolas(@item.Id)">Tetszik</button>
                </td>
                <td>
                    <span id="nemtetszikDb">@Html.DisplayFor(modelItem => item.NemTetszik)</span>
                    <button onclick="dislajkolas(@item.Id)">Nem Tetszik</button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aktiv)
                </td>
               
            </tr>
        }
    </tbody>
</table>